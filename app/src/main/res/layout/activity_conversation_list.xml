<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/spiderman_background_dark">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/spider_dark"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SPIDERS"
            android:textColor="@color/spider_red"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/visualizationButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_chart"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Visionlization" />

    </LinearLayout>

    <!-- 好友列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>