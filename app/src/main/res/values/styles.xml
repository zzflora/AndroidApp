<resources>
    <!-- Base application theme. -->
    <style name="Theme.SpiderVerse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spider_red</item>
        <item name="colorPrimaryVariant">@color/spider_red</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spider_blue</item>
        <item name="colorSecondaryVariant">@color/spider_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>